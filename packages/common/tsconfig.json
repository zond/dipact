{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2018"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "lib/esm",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es6",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["jest", "node", "@types/jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "lib/**/*"]
}
