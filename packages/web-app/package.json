{
  "name": "diplicity-web-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@diplicity/common": "^0.0.29",
    "@fontsource/cabin": "^4.4.5",
    "@jaames/iro": "^5.5.2",
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@reduxjs/toolkit": "^1.8.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/react-dom": "^17.0.14",
    "chart.js": "^3.4.0",
    "connected-react-router": "^6.9.2",
    "firebase": "^8.7.0",
    "formik": "^2.2.9",
    "ga-gtag": "^1.1.0",
    "i18next": "^21.6.11",
    "jquery": "^3.6.0",
    "murmurhash-js": "^1.0.0",
    "pako": "^2.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-ga": "^3.3.0",
    "react-i18next": "^11.15.4",
    "react-inlinesvg": "^3.0.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.6.2",
    "web-vitals": "^1.0.1",
    "yup": "^0.32.11"
  },
  "scripts": {
    "start": "webpack serve --open --mode development --port 3000",
    "start-browser-test-server": "webpack serve --open --mode development --port 3002",
    "build": "webpack --mode production",
    "test": "yarn test-unit && yarn test-browser",
    "test-unit": "yarn test -t unit.test --watchAll=false --maxWorkers=50% --isolatedModules=true",
    "test-browser": "npx playwright test -c ./playwright.config.ts",
    "test-coverage": "yarn test --watchAll=false --maxWorkers=50% --isolatedModules=true --ci --coverage",
    "test-coverage-ci": "yarn test --watchAll=false --maxWorkers=50% --isolatedModules=true --ci --coverage --coverageReporters=\"text\" --coverageReporters=\"text-summary\"",
    "test-ci": "yarn test-coverage-ci && yarn test-browser",
    "lint": "eslint src/**/*.{ts,tsx} --max-warnings 0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.34.1",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.1",
    "@types/react-router-dom": "^5.3.3",
    "craco-alias": "^3.0.1",
    "jest-location-mock": "^1.0.9",
    "miragejs": "^0.1.43",
    "msw": "^0.39.2",
    "webpack-cli": "^5.1.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/react-app-env.d.ts",
      "<rootDir>/src/mocks",
      "<rootDir>/src/hooks/utils.ts",
      "<rootDir>/src/store/base.ts"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}
